{
  "name": "tourdecode-ai",
  "displayName": "Tour de Code AI",
  "description": "AI-powered codebase tours using Repomix analysis and LLMs. Generate comprehensive, narrative-driven guided tours with mental model flow. Accelerate onboarding from weeks to hours.",
  "publisher": "saurabh-yergattikar",
  "version": "1.0.0",
  "author": {
    "name": "Saurabh Yergattikar"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/code-tour-ai/tourdecode_ai"
  },
  "bugs": {
    "url": "https://github.com/code-tour-ai/tourdecode_ai/issues"
  },
  "homepage": "https://github.com/code-tour-ai/tourdecode_ai#readme",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Education",
    "Visualization"
  ],
  "keywords": [
    "code tour",
    "onboarding",
    "documentation",
    "ai",
    "llm",
    "repomix",
    "codebase analysis",
    "learning",
    "tutorial"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "qna": "marketplace",
  "extensionKind": [
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onNotebookEditor:tourdecode"
  ],
  "main": "./dist/extension-node.js",
  "browser": "./dist/extension-web.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Tour de Code AI",
      "properties": {
        "tourdecode.promptForWorkspaceTours": {
          "type": "boolean",
          "default": true,
          "description": "Specifies whether or not to display a notification when opening a workspace with tours for the first time."
        },
        "tourdecode.recordMode": {
          "type": "string",
          "enum": [
            "lineNumber",
            "pattern"
          ],
          "default": "lineNumber",
          "description": "Specifies how the tour recorder will behave when capturing a new step."
        },
        "tourdecode.showMarkers": {
          "type": "boolean",
          "default": true,
          "description": "Specifies whether or not to show tour markers in the editor gutter."
        },
        "tourdecode.customTourDirectory": {
          "type": "string",
          "default": null,
          "description": "Specifies a custom location to use when discovering tours."
        },
        "tourdecode.llm.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for LLM service (OpenAI, Anthropic, etc.) used for auto-generating tours.",
          "markdownDescription": "API key for LLM service. Keep this secure and never commit it to version control."
        },
        "tourdecode.llm.apiUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "API endpoint URL for LLM service. Change this for custom providers or local models."
        },
        "tourdecode.llm.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "LLM model to use. Recommended: 'gpt-4o-mini' (fast + cheap), 'gpt-4-turbo-preview' (best quality), 'claude-3-5-sonnet-20241022' (balanced)"
        },
        "tourdecode.llm.provider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "custom"
          ],
          "default": "openai",
          "description": "LLM provider to use for auto-generation."
        },
        "tourdecode.autoGenerate.maxFilesToAnalyze": {
          "type": "number",
          "default": 15,
          "description": "Maximum number of source files to analyze with TreeSitter AST. The extension intelligently selects the TOP 15 most important files (entry points, core modules, high-complexity code) to avoid rate limits and generate focused tours. Like Cline - quality over quantity! Default: 15."
        },
        "tourdecode.autoGenerate.includeFileTypes": {
          "type": "array",
          "default": [
            ".ts",
            ".js",
            ".tsx",
            ".jsx",
            ".py",
            ".java",
            ".go",
            ".rs",
            ".cpp",
            ".c",
            ".cs"
          ],
          "description": "File extensions to include when auto-generating tours."
        }
      }
    },
    "commands": [
      {
        "command": "tourdecode.addContentStep",
        "title": "Add Tour Step",
        "category": "Tour de Code AI"
      },
      {
        "command": "tourdecode.addDirectoryStep",
        "title": "Add Tour Step"
      },
      {
        "command": "tourdecode.addSelectionStep",
        "title": "Add Tour Step"
      },
      {
        "command": "tourdecode.addTourStep",
        "title": "Add Step to Tour"
      },
      {
        "command": "tourdecode.changeTourDescription",
        "title": "Change Description"
      },
      {
        "command": "tourdecode.changeTourRef",
        "title": "Change Git Ref"
      },
      {
        "command": "tourdecode.changeTourStepLine",
        "title": "Change Line"
      },
      {
        "command": "tourdecode.changeTourStepTitle",
        "title": "Change Title"
      },
      {
        "command": "tourdecode.changeTourStepIcon",
        "title": "Change Icon"
      },
      {
        "command": "tourdecode.changeTourTitle",
        "title": "Change Title"
      },
      {
        "command": "tourdecode.resetProgress",
        "title": "Reset Progress",
        "category": "Tour de Code AI"
      },
      {
        "command": "tourdecode.resetTourProgress",
        "title": "Reset Progress"
      },
      {
        "command": "tourdecode.deleteTourStep",
        "title": "Delete Step"
      },
      {
        "command": "tourdecode.deleteTour",
        "title": "Delete Tour"
      },
      {
        "command": "tourdecode.editTourAtStep",
        "title": "Edit Step"
      },
      {
        "command": "tourdecode.editTour",
        "title": "Edit Tour",
        "category": "Tour de Code AI",
        "icon": "$(edit)"
      },
      {
        "command": "tourdecode.endTour",
        "title": "End Tour",
        "category": "Tour de Code AI",
        "icon": "$(primitive-square)"
      },
      {
        "command": "tourdecode.exportTour",
        "title": "Export Tour..."
      },
      {
        "command": "tourdecode.hideMarkers",
        "title": "Hide Tour Markers",
        "category": "Tour de Code AI",
        "icon": "$(eye-closed)"
      },
      {
        "command": "tourdecode.makeTourPrimary",
        "title": "Make Primary"
      },
      {
        "command": "tourdecode.moveTourStepForward",
        "title": "Move Down",
        "icon": "$(arrow-down)"
      },
      {
        "command": "tourdecode.moveTourStepBack",
        "title": "Move Up",
        "icon": "$(arrow-up)"
      },
      {
        "command": "tourdecode.nextTourStep",
        "title": "Next",
        "icon": "$(arrow-right)"
      },
      {
        "command": "tourdecode.openTourFile",
        "title": "Open Tour File...",
        "icon": "$(folder-opened)",
        "category": "Tour de Code AI"
      },
      {
        "command": "tourdecode.openTourUrl",
        "title": "Open Tour URL...",
        "category": "Tour de Code AI"
      },
      {
        "command": "tourdecode.previewTour",
        "title": "Preview Tour",
        "icon": "$(preview)"
      },
      {
        "command": "tourdecode.previousTourStep",
        "title": "Previous",
        "icon": "$(arrow-left)"
      },
      {
        "command": "tourdecode.recordTour",
        "title": "Record Tour",
        "category": "Tour de Code AI",
        "icon": "$(add)"
      },
      {
        "command": "tourdecode.resumeTour",
        "title": "Resume Tour",
        "category": "Tour de Code AI"
      },
      {
        "command": "tourdecode.saveTourStep",
        "title": "Save Step",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "tourdecode.showMarkers",
        "title": "Show Tour Markers",
        "category": "Tour de Code AI",
        "icon": "$(eye)"
      },
      {
        "command": "tourdecode.startTour",
        "title": "Start Tour",
        "category": "Tour de Code AI",
        "icon": "$(play)"
      },
      {
        "command": "tourdecode.unmakeTourPrimary",
        "title": "Unmake Primary"
      },
      {
        "command": "tourdecode.viewNotebook",
        "title": "View Notebook",
        "category": "Tour de Code AI"
      },
      {
        "command": "tourdecode.generateTour",
        "title": "Generate Tour (AI)",
        "category": "Tour de Code AI",
        "icon": "$(sparkle)"
      },
      {
        "command": "tourdecode.configureLLM",
        "title": "Configure LLM Settings",
        "category": "Tour de Code AI",
        "icon": "$(settings-gear)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "tourdecode.addContentStep",
          "when": "tourdecode:inTour && tourdecode:recording && tourdecode:canEditTour"
        },
        {
          "command": "tourdecode.endTour",
          "when": "tourdecode:inTour"
        },
        {
          "command": "tourdecode.recordTour",
          "when": "workspaceFolderCount != 0"
        },
        {
          "command": "tourdecode.resetProgress",
          "when": "tourdecode:hasProgress"
        },
        {
          "command": "tourdecode.resumeTour",
          "when": "tourdecode:inTour"
        },
        {
          "command": "tourdecode.startTour",
          "when": "tourdecode:hasTours"
        },
        {
          "command": "tourdecode.addDirectoryStep",
          "when": "false"
        },
        {
          "command": "tourdecode.addSelectionStep",
          "when": "false"
        },
        {
          "command": "tourdecode.addTourStep",
          "when": "false"
        },
        {
          "command": "tourdecode.changeTourRef",
          "when": "false"
        },
        {
          "command": "tourdecode.changeTourStepLine",
          "when": "false"
        },
        {
          "command": "tourdecode.changeTourStepTitle",
          "when": "false"
        },
        {
          "command": "tourdecode.changeTourStepIcon",
          "when": "false"
        },
        {
          "command": "tourdecode.changeTourTitle",
          "when": "false"
        },
        {
          "command": "tourdecode.changeTourDescription",
          "when": "false"
        },
        {
          "command": "tourdecode.deleteTour",
          "when": "false"
        },
        {
          "command": "tourdecode.deleteTourStep",
          "when": "false"
        },
        {
          "command": "tourdecode.editTour",
          "when": "false"
        },
        {
          "command": "tourdecode.editTourAtStep",
          "when": "false"
        },
        {
          "command": "tourdecode.exportTour",
          "when": "false"
        },
        {
          "command": "tourdecode.hideMarkers",
          "when": "false"
        },
        {
          "command": "tourdecode.makeTourPrimary",
          "when": "false"
        },
        {
          "command": "tourdecode.nextTourStep",
          "when": "false"
        },
        {
          "command": "tourdecode.previewTour",
          "when": "false"
        },
        {
          "command": "tourdecode.previousTourStep",
          "when": "false"
        },
        {
          "command": "tourdecode.resetTourProgress",
          "when": "false"
        },
        {
          "command": "tourdecode.saveTourStep",
          "when": "false"
        },
        {
          "command": "tourdecode.showMarkers",
          "when": "false"
        },
        {
          "command": "tourdecode.unmakeTourPrimary",
          "when": "false"
        },
        {
          "command": "tourdecode.viewNotebook",
          "when": "false"
        },
        {
          "command": "tourdecode.generateTour",
          "when": "workspaceFolderCount != 0"
        },
        {
          "command": "tourdecode.configureLLM",
          "when": "workspaceFolderCount != 0"
        }
      ],
      "comments/commentThread/title": [
        {
          "command": "tourdecode.previousTourStep",
          "group": "inline@1",
          "when": "commentController == tourdecode && commentThread =~ /hasPrevious/"
        },
        {
          "command": "tourdecode.nextTourStep",
          "group": "inline@2",
          "when": "commentController == tourdecode && commentThread =~ /hasNext/"
        },
        {
          "command": "tourdecode.endTour",
          "group": "inline@3",
          "when": "commentController == tourdecode"
        },
        {
          "command": "tourdecode.editTour",
          "group": "inline@4",
          "when": "commentController == tourdecode && !tourdecode:isEditing && tourdecode:canEditTour"
        },
        {
          "command": "tourdecode.previewTour",
          "group": "inline@4",
          "when": "commentController == tourdecode && tourdecode:isEditing && !commentThreadIsEmpty"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "tourdecode.addTourStep",
          "group": "inline",
          "when": "commentController == tourdecode && commentThreadIsEmpty"
        }
      ],
      "comments/comment/title": [
        {
          "command": "tourdecode.moveTourStepBack",
          "group": "move@1",
          "when": "commentController == tourdecode && tourdecode:canEditTour && commentThread =~ /hasPrevious/"
        },
        {
          "command": "tourdecode.moveTourStepForward",
          "group": "move@2",
          "when": "commentController == tourdecode && tourdecode:canEditTour && commentThread =~ /hasNext/"
        },
        {
          "command": "tourdecode.changeTourStepLine",
          "group": "mutate@1",
          "when": "commentController == tourdecode && tourdecode:canEditTour"
        },
        {
          "command": "tourdecode.deleteTourStep",
          "group": "mutate@2",
          "when": "commentController == tourdecode && tourdecode:canEditTour"
        }
      ],
      "comments/comment/context": [
        {
          "command": "tourdecode.saveTourStep",
          "group": "inline@2",
          "when": "commentController == tourdecode && tourdecode:recording"
        }
      ],
      "view/title": [
        {
          "command": "tourdecode.hideMarkers",
          "when": "view == tourdecode.tours && tourdecode:showingMarkers",
          "group": "navigation@1"
        },
        {
          "command": "tourdecode.showMarkers",
          "when": "view == tourdecode.tours && !tourdecode:showingMarkers",
          "group": "navigation@1"
        },
        {
          "command": "tourdecode.openTourFile",
          "when": "view == tourdecode.tours",
          "group": "navigation@2"
        },
        {
          "command": "tourdecode.generateTour",
          "when": "view == tourdecode.tours",
          "group": "navigation@1"
        },
        {
          "command": "tourdecode.configureLLM",
          "when": "view == tourdecode.tours",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "tourdecode.endTour",
          "when": "viewItem =~ /^tourdecode.tour(.recording)?.active/",
          "group": "inline@1"
        },
        {
          "command": "tourdecode.startTour",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?$/",
          "group": "inline@1"
        },
        {
          "command": "tourdecode.resumeTour",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?(.recording)?.active$/",
          "group": "active@1"
        },
        {
          "command": "tourdecode.endTour",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?(.recording)?.active$/",
          "group": "active@2"
        },
        {
          "command": "tourdecode.startTour",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?$/",
          "group": "basic@1"
        },
        {
          "command": "tourdecode.viewNotebook",
          "when": "false",
          "group": "basic@2"
        },
        {
          "command": "tourdecode.addContentStep",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?.recording/",
          "group": "basic@1"
        },
        {
          "command": "tourdecode.resetTourProgress",
          "when": "false",
          "group": "basic@2"
        },
        {
          "command": "tourdecode.changeTourTitle",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?(.recording)?(.active)?$/",
          "group": "change@1"
        },
        {
          "command": "tourdecode.changeTourDescription",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?(.recording)?(.active)?$/",
          "group": "change@2"
        },
        {
          "command": "tourdecode.changeTourRef",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?(.recording)?(.active)?$/ && gitOpenRepositoryCount != 0",
          "group": "change@3"
        },
        {
          "command": "tourdecode.makeTourPrimary",
          "when": "viewItem =~ /^tourdecode.tour(.recording)?(.active)?$/",
          "group": "edit@1"
        },
        {
          "command": "tourdecode.unmakeTourPrimary",
          "when": "viewItem =~ /^tourdecode.tour.primary(.recording)?(.active)?$/",
          "group": "edit@2"
        },
        {
          "command": "tourdecode.editTour",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?(.active)?$/",
          "group": "edit@2"
        },
        {
          "command": "tourdecode.previewTour",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?.recording/",
          "group": "edit@2"
        },
        {
          "command": "tourdecode.deleteTour",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?(.recording)?(.active)?$/",
          "group": "edit@3"
        },
        {
          "command": "tourdecode.exportTour",
          "when": "viewItem =~ /^tourdecode.tour(.primary)?(.active)?$/",
          "group": "export@1"
        },
        {
          "command": "tourdecode.moveTourStepBack",
          "when": "viewItem =~ /^tourdecode.tourStep.hasPrevious/",
          "group": "inline@1"
        },
        {
          "command": "tourdecode.moveTourStepForward",
          "when": "viewItem =~ /tourdecode.tourStep.*(.hasNext)/",
          "group": "inline@2"
        },
        {
          "command": "tourdecode.moveTourStepBack",
          "when": "viewItem =~ /^tourdecode.tourStep.hasPrevious/",
          "group": "basic@1"
        },
        {
          "command": "tourdecode.moveTourStepForward",
          "when": "viewItem =~ /tourdecode.tourStep.*(.hasNext)/",
          "group": "basic@2"
        },
        {
          "command": "tourdecode.changeTourStepTitle",
          "when": "viewItem =~ /^tourdecode.tourStep/",
          "group": "change@1"
        },
        {
          "command": "tourdecode.changeTourStepIcon",
          "when": "viewItem =~ /^tourdecode.tourStep/",
          "group": "change@2"
        },
        {
          "command": "tourdecode.addContentStep",
          "when": "viewItem =~ /^tourdecode.tourStep/ && tourdecode:recording",
          "group": "change@2"
        },
        {
          "command": "tourdecode.editTourAtStep",
          "when": "viewItem =~ /^tourdecode.tourStep/ && !tourdecode:recording",
          "group": "manage@1"
        },
        {
          "command": "tourdecode.deleteTourStep",
          "when": "viewItem =~ /^tourdecode.tourStep/",
          "group": "manage@2"
        }
      ],
      "explorer/context": [
        {
          "command": "tourdecode.addDirectoryStep",
          "when": "tourdecode:recording && explorerResourceIsFolder"
        }
      ],
      "editor/context": [
        {
          "command": "tourdecode.addSelectionStep",
          "when": "tourdecode:recording && editorHasSelection",
          "group": "tourdecode@1"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "tourdecode.tours",
          "name": "Tour de Code AI",
          "when": "workspaceFolderCount != 0 || tourdecode:inTour"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "tourdecode.tours",
        "contents": "**AI-Powered Codebase Tours** ðŸš€\n\nAutomatically generate comprehensive, narrative-driven codebase tours using Repomix analysis and AI. Perfect for onboarding engineers and understanding complex codebases!\n\n[Generate Tour (AI)](command:tourdecode.generateTour)\n\n[Configure LLM Settings](command:tourdecode.configureLLM)\n\n---\n\n**Features:**\nâ€¢ Real codebase analysis with Repomix\nâ€¢ Mental model-driven tour generation\nâ€¢ Architectural overview & flows\nâ€¢ Professional technical language\nâ€¢ Comprehensive welcome page\n\nGet started by configuring your LLM API key, then generate your first tour!"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.tour",
        "url": "./schema.json"
      }
    ],
    "keybindings": [
      {
        "command": "tourdecode.previousTourStep",
        "when": "tourdecode:inTour && !textInputFocus && !terminalFocus",
        "key": "ctrl+left",
        "mac": "cmd+left"
      },
      {
        "command": "tourdecode.nextTourStep",
        "when": "tourdecode:inTour && !textInputFocus && !terminalFocus",
        "key": "ctrl+right",
        "mac": "cmd+right"
      },
      {
        "command": "tourdecode.endTour",
        "when": "tourdecode:inTour && !textInputFocus && !terminalFocus",
        "key": "ctrl+down ctrl+down",
        "mac": "cmd+down cmd+down"
      },
      {
        "command": "tourdecode.startTour",
        "when": "!textInputFocus && !terminalFocus",
        "key": "ctrl+up ctrl+up",
        "mac": "cmd+up cmd+up"
      }
    ],
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".tour"
        ]
      }
    ],
    "notebookProvider": [
      {
        "viewType": "tourdecode",
        "displayName": "Tour de Code AI",
        "selector": [
          {
            "filenamePattern": "*.tour-notebook"
          }
        ]
      }
    ]
  },
  "dependencies": {
    "@types/jexl": "^2.2.0",
    "axios": "^0.21.4",
    "jexl": "^2.3.0",
    "mobx": "^5.14.2",
    "os-browserify": "0.3.0",
    "path-browserify": "1.0.1",
    "throttle-debounce": "^3.0.1",
    "vsls": "^1.0.2532",
    "web-tree-sitter": "^0.20.8",
    "tree-sitter-wasms": "^0.1.11"
  },
  "devDependencies": {
    "@types/node": "^18.14.0",
    "@types/throttle-debounce": "^5.0.0",
    "@types/vscode": "^1.60",
    "@vscode/vsce": "^2.17.0",
    "copy-webpack-plugin": "^11.0.0",
    "debug": "^4.3.4",
    "eslint": "^8.34.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0"
  },
  "scripts": {
    "build": "webpack --mode production",
    "vscode:prepublish": "npm run build",
    "watch": "webpack --mode development --watch",
    "package": "vsce package"
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "none"
  }
}